<Window x:Class="EmployeeManagement.EmployeeForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Employee Form" Width="800" Height="600">

    <Grid>
        <Label Content="Фамилия*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" />
        <TextBox HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,20,20,0" Width="200" />

        <!-- Add other fields here -->

        <!-- Family Members -->
        <Label Content="Состав семьи" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,200,0,0" FontSize="16" />
        <ListView x:Name="FamilyListView" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Height="150" Margin="20,230,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ФИО" Width="150" />
                    <GridViewColumn Header="Родственник" Width="150" />
                    <GridViewColumn Header="Дата рождения" Width="100" />
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Previous Jobs -->
        <Label Content="Предыдущие места работы" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="430,200,0,0" FontSize="16" />
        <ListView x:Name="JobsListView" HorizontalAlignment="Left" VerticalAlignment="Top" Width="350" Height="150" Margin="430,230,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Место работы" Width="150" />
                    <GridViewColumn Header="Должность" Width="100" />
                    <GridViewColumn Header="Стаж" Width="100" />
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Add buttons for adding/deleting family members and jobs -->
        <Button Content="Добавить сотрудника" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,400,0,0" Width="150" />
        <Button Content="Добавить место работы" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,400,0,0" Width="150" />
        <Button Content="Удалить" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="380,400,0,0" Width="100" />

    </Grid>
</Window>
